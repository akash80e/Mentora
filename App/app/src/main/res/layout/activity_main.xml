<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true"
    android:scrollbars="none"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context=".MainActivity"
            android:background="@drawable/ic_background">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="157dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:weightSum="1"
                android:id="@+id/linearLayout2">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="60dp"
                    android:id="@+id/imageView4"
                    android:layout_weight="0.21"
                    android:src="@drawable/ic_engineering"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="60dp"
                    android:id="@+id/imageView5"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.21"
                    android:src="@drawable/ic_medical"
                    android:layout_marginTop="dpdp"
                    android:layout_marginRight="5dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="55dp"
                    android:id="@+id/imageView6"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.21"
                    android:src="@drawable/ic_abroad"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="5dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="60dp"
                    android:id="@+id/imageView7"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.21"
                    android:src="@drawable/ic_tutor"
                    android:layout_marginTop="0dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Now find the best alumni in your own city"
                android:id="@+id/textView26"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/linearLayout2"
                android:layout_alignEnd="@+id/linearLayout2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="for better career guidance"
                android:id="@+id/textView27"
                android:layout_below="@+id/textView26"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/textView26"
                android:layout_alignEnd="@+id/textView26" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Engineering"
                android:id="@+id/textView28"
                android:layout_alignTop="@+id/linearLayout2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="99dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Medical"
                android:id="@+id/textView29"
                android:layout_alignTop="@+id/textView28"
                android:layout_toRightOf="@+id/textView28"
                android:layout_toEndOf="@+id/textView28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Study Abroad"
                android:id="@+id/textView30"
                android:layout_alignTop="@+id/textView29"
                android:layout_toRightOf="@+id/textView29"
                android:layout_toEndOf="@+id/textView29"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Tutor"
                android:id="@+id/textView31"
                android:layout_alignTop="@+id/textView30"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="55dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView8"
                android:src="@drawable/ic_about_us"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/linearLayout2"
                android:layout_alignEnd="@+id/linearLayout2"
                android:layout_marginBottom="33dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Team"
                android:id="@+id/textView32"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/linearLayout2"
                android:layout_alignEnd="@+id/linearLayout2"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView9"
                android:src="@drawable/ic_register"
                android:layout_above="@+id/textView33"
                android:layout_alignRight="@+id/textView31"
                android:layout_alignEnd="@+id/textView31" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Register"
                android:id="@+id/textView33"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/imageView9"
                android:layout_alignEnd="@+id/imageView9"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>